<div class="col-md-3 boards">
  <%= link_to board do %>
    <div class="list-group-item">
      <p><%= best_in_place board, :title, :html_attrs => { size: 15 } %></p>

      <%= link_to edit_board_path(board), remote: true do %>
        <span class="glyphicon glyphicon-pencil"></span>
      <% end %>
      <%= link_to board_path(board), method: :delete, data: {confirm: 'Are you sure'} do %>
        <span class="glyphicon glyphicon-remove"></span>
      <% end %>
    </div>
  <% end %>
</div>
